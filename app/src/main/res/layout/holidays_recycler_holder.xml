<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="170dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    android:elevation="5dp"
    android:paddingBottom="10dp"
    android:background="@drawable/holiday_leaves_bg"
    android:layout_marginHorizontal="10dp">

    <TextView
        android:id="@+id/fromHoliday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:text="14 August"
        android:textColor="@color/text_black_to_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="to"
        android:textColor="@color/text_black_to_white"
        android:textSize="15sp"
        app:layout_constraintEnd_toEndOf="@+id/fromHoliday"
        app:layout_constraintStart_toStartOf="@+id/fromHoliday"
        app:layout_constraintTop_toBottomOf="@+id/fromHoliday" />

    <TextView
        android:id="@+id/toHoliday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="14 August"
        android:textColor="@color/text_black_to_white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Independance Day"
        android:textColor="@color/text_black_to_white"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toHoliday" />

</androidx.constraintlayout.widget.ConstraintLayout>